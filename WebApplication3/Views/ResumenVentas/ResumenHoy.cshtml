@model IEnumerable<WebApplication3.Models.DTOs.SalesClientResumeDTO>

<h1>Resumen del dia</h1>

<div class="card text-primary">
    <div class=" card-header text-center">
        <h5>Resumen general de ventas</h5>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <hr />
                    <h5 class="panel-title"></h5>
                </div>
                <div class="panel-body">
                    <table class="table table-hover table-responsive table-striped" id="SalesTable">
                        <thead>
                            <tr>
                                <th>
                                    <a>Numero de venta</a>
                                </th>
                                <th>
                                    <a>Comprador</a>
                                </th>
                                <th>
                                    <a>Electricista</a>
                                </th>
                                <th>
                                    <a>total</a>
                                </th>
                                <th>
                                    <a>Acceso a Detalles</a>
                                </th>
                               
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                             <tr>
                                 <td>
                                     @item.IdSales
                                 </td>
                                 <td>
                                     @item.NombreCOnsumidor
                                 </td>
                                    <td>
                                        @item.nombreElectricista
                                    </td>
                                 <td>
                                     @item.Total
                                 <td>
                                   <button class="btn btn-info" id="@item.IdSales">Detalles</button>
                                 </td>
                             </tr>   
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

