@model IEnumerable<Product>


<h1>bienvenido a la bodega</h1>
@{
    var successMessage = TempData["SuccessMessage"] as string;
}
@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success" role="alert">
        @successMessage
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
<div class="card text-primary">
    <div class="card-header text-center">
        <h5>Lista de Productos</h5>        
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <hr />
                        <h5 class="panel-title">Productos</h5>
                    </div>
                    <div class="panel-body">
                        <table class="table table-hover table-responsive table-striped" id="MyTable">
                            <thead>
                                <tr>
                                    <th>
                                        <a asp-action="Inventario" asp-route-filtro="@ViewData["Filtro"]"> ID Producto</a>
                                       
                                    </th>
                                    <th>
                                        <a asp-action ="Inventario" asp-route-filtro="@ViewData["FiltroNombre"]">Producto</a>
                                    </th>
                                    <th>
                                       <a asp-action="Inventario" asp-route-filtro="@ViewData["FiltroProveedor"]">Proveedor </a>
                                    </th>
                                    <th>
                                       <a asp-action="Inventario" asp-route-filtro="@ViewData["FiltroPrecio"]">Precio Venta</a>
                                    </th>
                                    <th>
                                        <a asp-action="Inventario" asp-route-filtro="@ViewData["FiltroStock"]"> En inventario</a>
                                    </th>
                                    <th>
                                        <a>Precio Compra</a>
                                    </th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                           @item.IdProduct
                                        </td>
                                        <td>
                                            @item.ProductName
                                        </td>
                                        <td>
                                           @item.ProductProvider
                                        </td>
                                        <td>
                                            @item.ProductPrices
                                        </td>
                                        <td>
                                            @item.ProductStock
                                        </td>
                                        <td>
                                            @item.ProductBuyed
                                        </td>
                                        <td>
                                            <a asp-action="DetallesProducto" asp-route-id="@item.IdProduct" class="btn btn-outline-warning btn-sm">Editar</a>
                           
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer text-muted text-center">
        Crud Productos
    </div>
</div>
@section Scripts {
    <script src="~/js/PrediccionConsumidor.js" asp-append-version="true"></script>
    <script src="~/js/Orden.js" asp-append-version="true"></script>


}
