@model WebApplication3.Models.Product

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}


<div class=" card text-primary">
    <div class="card-header text-center">
        <h5>Editar Producto</h5>
    </div>
    <div class=" card-body text-primary">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="EditarProducto" method="post">
                    <input type="hidden" asp-for="IdProduct" />
                    <div class="form-group">
                        <label asp-for="ProductName" class="control-label"></label>
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductProvider" class="control-label"></label>
                        <textarea asp-for="ProductProvider" class="form-control"></textarea>
                        <span asp-validation-for="ProductProvider" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductPrices" class="control-label"></label>
                        <input asp-for="ProductPrices" class="form-control" />
                        <span asp-validation-for="ProductPrices" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductStock" class="control-label"></label>
                        <input asp-for="ProductStock" class="form-control" />
                        <span asp-validation-for="ProductStock" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductBuyed" class="control-label"></label>
                        <input asp-for="ProductBuyed" class="form-control" />
                        <span asp-validation-for="ProductBuyed" class="text-danger"></span>
                    </div>
                    <div class="card-footer text-center">
                        <input type="submit" value="Guardar" class="btn btn-outline-primary btn-sm" />
                        <a asp-action="Inventario" class="btn btn-outline-success btn-sm">Volver a la lista</a>
                    </div>
                </form>
             </div>
        </div>
    </div>

</div>